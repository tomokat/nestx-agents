<div class="space-y-4">
    <div class="flex justify-between items-center">
        <h3 class="font-bold text-lg">Task Runner</h3>
        {{#if isRunning}}
        <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded text-sm font-semibold animate-pulse">Running</span>
        {{else}}
        <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded text-sm font-semibold">Idle</span>
        {{/if}}
    </div>

    {{#if isRunning}}
    <div hx-get="/dashboard/tasks/status" hx-trigger="every 1s" hx-swap="outerHTML" hx-target="this">
        <label class="block text-sm font-medium text-gray-700 mb-1">Progress: {{progress}}%</label>
        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
            <div class="bg-indigo-600 h-2.5 rounded-full transition-all duration-300" style="width: {{progress}}%">
            </div>
        </div>
        <p class="text-sm text-gray-500 mt-2">Processing batch {{currentBatch}} of {{totalBatches}}...</p>
    </div>
    {{else}}
    <div>
        <button hx-post="/dashboard/tasks/start" hx-target="#task-runner-container"
            class="w-full px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition-colors">
            Start AI Agent Simulation
        </button>
    </div>
    {{/if}}
</div>