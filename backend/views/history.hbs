<ul class="timeline timeline-vertical timeline-compact">
    {{#each history}}
    <li>
        <hr class="bg-primary/20" />
        <div class="timeline-middle">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                class="w-4 h-4 text-primary">
                <path fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd" />
            </svg>
        </div>
        <div class="timeline-end mb-10 ml-2 w-full">
            <time class="font-mono italic text-[10px] text-gray-500 block mb-1">{{timestamp}}</time>
            <div class="text-xs font-bold text-gray-900 mb-1">{{analysis_short}}</div>
            <!-- HTML Content with better formatting -->
            <div class="text-xs text-gray-800 prose prose-xs max-w-none leading-relaxed">
                {{{analysis_html}}}
            </div>
        </div>
        <hr class="bg-primary/20" />
    </li>
    {{/each}}
</ul>