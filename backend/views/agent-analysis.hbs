<div class="agent-analysis-result p-4 bg-base-200 rounded-lg shadow-md animate-fade-in" hx-ext="sse"
    sse-connect="/agent/stream-analysis" sse-swap="message" id="agent-analysis-card">

    <div class="flex items-center gap-2 mb-3">
        <div class="badge badge-primary">AI Analysis (Streaming)</div>
        <span class="text-xs text-opacity-50">Gemini 2.5 Flash</span>
        <span class="loading loading-dots loading-xs text-info ml-auto"></span>
    </div>
    <div class="prose prose-sm max-w-none" id="analysis-result">
        <!-- Content will be streamed here -->
        {{#if analysis}}
        {{{analysis}}}
        {{/if}}
    </div>
    <div class="divider my-2"></div>
    <div class="text-xs text-base-content/50">
        Trace ID: {{traceId}}
    </div>
</div>