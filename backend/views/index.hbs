<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>{{title}}</title>
  <!-- Stencil Loader -->
  <!-- Note: Namespace will be 'ui-library' -->
  <script type="module" src="/static/ui-library/ui-library.esm.js"></script>
  <script nomodule src="/static/ui-library/ui-library.js"></script>

  <!-- HTMX -->
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  <script src="https://unpkg.com/htmx.org@1.9.10/dist/ext/sse.js"></script>

  <!-- DaisyUI -->
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.19/dist/full.min.css" rel="stylesheet" type="text/css" />

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 p-10 font-sans">
  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- Main Dashboard Area -->
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white rounded-xl shadow-md overflow-hidden p-6">
        <h1 class="text-2xl font-bold mb-4 text-gray-800">Hypermedia Dashboard</h1>

        <div class="mb-6 p-4 border rounded bg-gray-50 flex items-center justify-between">
          <span class="text-gray-600">Current Status:</span>
          <div id="status-container">
            <!-- Initial Render -->
            <my-status-badge type="success">System Online</my-status-badge>
          </div>
        </div>

        <!-- Lazy Loaded Metrics -->
        <div hx-get="/dashboard/metrics" hx-trigger="load delay:500ms" hx-swap="outerHTML" class="mb-6">
          <div class="text-center p-4 text-gray-500">Loading metrics...</div>
        </div>

        <!-- Task Runner with Live Polling -->
        <div id="task-runner-container" class="mb-6 p-4 border rounded bg-white shadow-sm">
          {{> task_status}}
        </div>

        <!-- Search with Debouncing -->
        <div class="mb-6 p-4 border rounded bg-white shadow-sm">
          <h3 class="font-bold text-lg mb-4">Agent Missions</h3>
          <input type="text" name="q" placeholder="Search missions..."
            class="w-full px-4 py-2 mb-4 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-600"
            hx-get="/dashboard/missions/search" hx-trigger="keyup changed delay:500ms, search"
            hx-target="#missions-body">

          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mission Name
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Agent</th>
              </tr>
            </thead>
            <tbody id="missions-body" class="bg-white divide-y divide-gray-200" hx-get="/dashboard/missions/search"
              hx-trigger="load">
              <!-- Results will be loaded here -->
            </tbody>
          </table>
        </div>

        <!-- AI System Analysis -->
        <div class="mb-6 p-4 border rounded bg-white shadow-sm">
          <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
            <span>ðŸ¤–</span> System Analysis
          </h3>
          <div id="agent-analysis-container" class="mb-4">
            <p class="text-gray-500 italic p-4 bg-gray-50 rounded">Click analyze to generate a system report.</p>
          </div>
          <button
            class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition-colors shadow-md flex items-center gap-2 disabled:opacity-50"
            hx-post="/agent/analyze" hx-target="#agent-analysis-container" hx-swap="innerHTML"
            hx-indicator="#analysis-spinner">
            <span>Analyze System</span>
            <svg id="analysis-spinner" class="htmx-indicator w-4 h-4 text-white animate-spin"
              xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
              </path>
            </svg>
          </button>
        </div>

        <button class="hidden px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition-colors"
          hx-get="/api/tasks/partial" hx-target="#status-container" hx-swap="innerHTML">
          Check Status
        </button>
      </div>
    </div>

    <!-- History Sidebar -->
    <div class="space-y-6">
      <div class="bg-white rounded-xl shadow-md overflow-hidden p-6 max-h-screen overflow-y-auto">
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2 border-b pb-2">
          <span>ðŸ“œ</span> Agent Memory
        </h2>
        <p class="text-xs text-gray-400 mb-4">Last 10 system analyses retrieved from vector store.</p>
        <div hx-get="/dashboard/history" hx-trigger="load, every 30s" hx-swap="innerHTML">
          <div class="flex flex-col gap-4 animate-pulse">
            <div class="h-4 bg-gray-200 rounded w-3/4"></div>
            <div class="h-4 bg-gray-200 rounded w-1/2"></div>
            <div class="h-4 bg-gray-200 rounded w-full"></div>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>

</html>